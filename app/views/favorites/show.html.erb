
<div class="container">
	    <% if flash[:notice] %>
		  <div class="flash-create">
		    <%= flash[:notice] %>
		  </div>
		<% end %>
	<div class="row">
		<div class="col-lg-3">
		<div class="side-bar">
			<div class="user-box>">
				<h2>User info</h2>
				<p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, class: "pull-left ", fallback: "no_image.jpg" %></p>
				<table class="table">
					<tr>
						<th><div name-box>name</div></th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th><div introduction-box>introduction</div></th>
						<th><%= @user.introduction %></th>
					</tr>
			    </table>
				<%= link_to "", edit_user_path(current_user.id), class: "btn btn-default btn-lg btn-block glyphicon glyphicon-wrench" %>

		    </div>
		    <div class="new-book-box">
		    	<h2>New Book</h2>
		    	<%= form_for(@new) do |f| %>
		    	<h4>Title</h4>
		    	<%= f.text_field :title, class: "side-bar-box" %>
		    	<h4>Opinion</h4>
		    	<%= f.text_area :body, class: "side-bar-box" %>
		    	<%= f.submit "Create Book", class:"btn btn-primary btn-lg btn-block" %>
		    	<% end %>
		    </div>
		</div>
	    </div>
	    <div class="col-lg-9">
	    	<div class="like-box">
		    	<h2>いいね User</h2>
		    	    <table class="iine">
	    				<tbody>
		                <% @favorites.each do |like| %>
		                    <tr>
		                    	<td><p><%= attachment_image_tag like.user, :profile_image, :fill, 60, 60, class: "pull-left ", fallback: "no_image.jpg" %></p></td>
		                    	<!-- ↑　list.userを使う事により、listが参照している@booksの中のuserが参照されることになる
		                    		アソシエーションによって各bookデータに関連づけられているユーザーデータが表示されるという仕組み
		                    		@userでは今のコントローラーの記述により自分の画像しか出てこない-->
								<td><span class="like-content"><%= like.user.name %></span></td>
					    		<td><span class="like-content"><%= link_to "Show", user_path(like.user_id) %></span></td>
					    	</tr>
					    </tbody>
			    		<% end %>
	    	        </table>
	    	</div>
            
	    </div>
	</div>
</div>